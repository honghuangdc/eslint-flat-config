{
  "name": "@soybeanjs/eslint-config",
  "type": "module",
  "version": "1.0.8",
  "packageManager": "pnpm@8.11.0",
  "author": {
    "name": "Soybean",
    "email": "soybeanjs@outlook.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/eslint-flat-config",
  "repository": {
    "url": "https://github.com/soybeanjs/eslint-flat-config.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/eslint-flat-config/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "run-s typecheck build-only build-pkg",
    "build-only": "unbuild",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "soy cleanup",
    "commit": "soy git-commit",
    "lint": "eslint . --fix",
    "prepare": "pnpm build && simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "soy release",
    "stub": "pnpm -r run stub",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "soy ncu"
  },
  "peerDependencies": {
    "eslint": ">=8.40.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-vue": {
      "optional": true
    },
    "prettier-plugin-toml": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "0.3.1",
    "@eslint/eslintrc": "2.1.4",
    "@eslint/js": "8.55.0",
    "@toml-tools/parser": "1.0.0",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-define-config": "2.0.0",
    "eslint-parser-plain": "0.1.0",
    "eslint-plugin-i": "2.29.0",
    "eslint-plugin-n": "16.3.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-unicorn": "49.0.0",
    "globals": "13.23.0",
    "local-pkg": "0.5.0",
    "prettier": "4.0.0-alpha.3",
    "prettier-plugin-jsdoc": "1.1.1",
    "prettier-plugin-json-sort": "workspace:*",
    "prompts": "2.4.2"
  },
  "devDependencies": {
    "@eslint-types/import": "2.29.0-1",
    "@eslint-types/typescript-eslint": "6.12.0",
    "@eslint-types/unicorn": "49.0.0",
    "@soybeanjs/cli": "0.8.0",
    "@soybeanjs/eslint-config": "link:",
    "@types/eslint": "8.44.8",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/eslint__eslintrc": "2.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "20.10.3",
    "@types/prompts": "2.4.9",
    "eslint": "8.55.0",
    "eslint-plugin-vue": "9.19.2",
    "lint-staged": "15.2.0",
    "npm-run-all": "4.1.5",
    "prettier-plugin-toml": "2.0.1",
    "simple-git-hooks": "2.9.0",
    "solid-js": "^1.8.7",
    "typescript": "5.3.2",
    "unbuild": "2.0.0",
    "vue": "3.3.10",
    "vue-eslint-parser": "9.3.2"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
